#include <iostream>
using namespace std;

int main() {
    int n;
    
    // Take input from user
    cout << "Enter a number: ";
    cin >> n;

    // Check if number is even or odd
    if (n % 2 == 0) {
        cout << n << " is even." << endl;
    } else {
        cout << n << " is odd." << endl;
    }

    // Print first n natural numbers only if n is positive
    if (n > 0) {
        cout << "First " << n << " natural numbers: ";
        for (int i = 1; i <= n; i++) {
            cout << i << " ";
        }
        cout << endl;
    } else {
        cout << "Please enter a positive number to print natural numbers." << endl;
    }

    return 0;
}

